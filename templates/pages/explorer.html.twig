{% extends 'base.html.twig' %}

{% block title %}Explore Books{% endblock %}

{% block body %}
    <div class="card card-grid h-full min-w-full">
        <div class="card-header flex justify-between items-center p-4 bg-gray-800 text-white">
            <h3 class="card-title text-lg font-semibold">Les Lectures</h3>
            <div class="input input-sm max-w-48 bg-white flex items-center rounded-lg shadow-md">
                <i class="ki-filled ki-magnifier text-gray-500 ml-2"></i>
                <input data-datatable-search="#read-books-table" placeholder="Rechercher" type="text" class="px-2 py-1 w-full rounded-lg border-none focus:outline-none" />
            </div>
        </div>
        <div class="card-body p-4 bg-gray-100">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for bookReading in booksRead %}
                    <div class="bg-black shadow-lg rounded-lg overflow-hidden border border-gray-300 hover:shadow-2xl transform transition-all duration-300 hover:scale-105">
                        <div class="p-4">
                            <h4 class="text-xl font-semibold text-gray-800 hover:text-primary transition-colors duration-200 mb-2">
                                {{ bookReading.bookId.name }}
                            </h4>
                            <p class="text-sm text-gray-600 truncate">
                                {{ bookReading.bookId.description|slice(0, 100) ~ '...' }}
                            </p>
                            <div class="mt-3 text-xs text-gray-500">
                                <span class="font-medium">{{ bookReading.bookId.categoryId.name }}</span>
                            </div>
                            <p class="text-xs text-gray-500 mt-4">
                                {{ bookReading.description|raw }}
                            </p>
                        </div>
                        <div class="card-footer flex justify-between items-center px-4 py-3 border-t border-gray-200 bg-gray-50">
                            <div class="flex items-center space-x-2">
                                <span class="text-primary font-medium text-sm">{{ bookReading.likes|default(0) }}</span>
                                <span>‚ù§Ô∏è</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <span class="text-primary font-medium text-sm">{{ bookReading.comments|default(0) }}</span>
                                <span>üí¨</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}